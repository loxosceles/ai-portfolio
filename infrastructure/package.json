{
  "name": "infrastructure",
  "version": "0.1.0",
  "type": "commonjs",
  "description": "",
  "bin": {
    "app": "bin/app.ts"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "diff": "cdk diff",
    "synth": "cdk synth",
    "test": "jest",
    "deploy:dev": "ENVIRONMENT=dev npx cdk deploy --all --context stage=dev --require-approval never",
    "deploy:prod": "ENVIRONMENT=prod npx cdk deploy --all --context stage=prod --require-approval=never --force",
    "deploy:web:dev": "ENVIRONMENT=dev npx cdk deploy PortfolioWebStack-dev --context stage=dev --require-approval never",
    "deploy:web:prod": "ENVIRONMENT=prod npx cdk deploy PortfolioWebStack-prod --context stage=prod --require-approval=never --force",
    "deploy:frontend:dev": "ENVIRONMENT=dev npx cdk deploy PortfolioWebStack-dev --context stage=dev --require-approval never",
    "deploy:frontend:prod": "ENVIRONMENT=prod npx cdk deploy PortfolioWebStack-prod --context stage=prod --require-approval=never --force",
    "destroy:dev": "ENVIRONMENT=dev cdk destroy --all --force",
    "destroy:prod": "echo 'Production destroy not allowed' && exit 1",
    "upload-static-data:dev": "node lib/data-management/upload-static-data.mjs dev",
    "upload-static-data:prod": "node lib/data-management/upload-static-data.mjs prod",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad",
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "^3.844.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.826.0",
    "@aws-sdk/client-dynamodb": "^3.525.0",
    "@aws-sdk/client-s3": "^3.525.0",
    "@aws-sdk/client-ssm": "^3.525.0",
    "@aws-sdk/lib-dynamodb": "^3.525.0",
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@types/aws-lambda": "^8.10.150",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "aws-cdk": "^2.1020.2",
    "babel-jest": "^30.0.2",
    "constructs": "^10.4.2",
    "dotenv": "^16.5.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.4.0"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.204.0",
    "commander": "^12.0.0",
    "constructs": "^10.0.0",
    "ts-node": "^10.9.2"
  }
}
