{
  "name": "infrastructure",
  "version": "0.1.0",
  "type": "commonjs",
  "description": "",
  "bin": {
    "app": "bin/app.ts"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "diff": "cdk diff",
    "synth": "cdk synth",
    "test": "jest",
    "deploy:dev": "ENVIRONMENT=dev npx cdk deploy --all --context stage=dev --require-approval never",
    "deploy:prod": "ENVIRONMENT=prod npx cdk deploy --all --context stage=prod --require-approval=never --force",
    "deploy:web:dev": "ENVIRONMENT=dev npx cdk deploy PortfolioWebStack-dev --context stage=dev --require-approval never",
    "deploy:web:prod": "ENVIRONMENT=prod npx cdk deploy PortfolioWebStack-prod --context stage=prod --require-approval=never --force",
    "destroy:dev": "ENVIRONMENT=dev cdk destroy --all --force",
    "destroy:prod": "echo 'Production destroy not allowed' && exit 1",
    "seed:dev": "ENVIRONMENT=dev node seed/seed.mjs",
    "seed:force:dev": "ENVIRONMENT=dev node seed/seed.mjs --force",
    "seed:job-matching:dev": "ENVIRONMENT=dev node seed/job-matching-seed.mjs",
    "create-bucket:dev": "node lib/data-management/create-bucket.mjs dev",
    "create-bucket:prod": "node lib/data-management/create-bucket.mjs prod",
    "upload-data:dev": "node lib/data-management/upload-data.mjs dev",
    "upload-data:prod": "node lib/data-management/upload-data.mjs prod",
    "setup-data:dev": "pnpm run create-bucket:dev && pnpm run upload-data:dev",
    "setup-data:prod": "pnpm run create-bucket:prod && pnpm run upload-data:prod",
    "update-env:dev": "ENVIRONMENT=dev node lib/data-management/update-env.mjs",
    "update-env:prod": "ENVIRONMENT=prod node lib/data-management/update-env.mjs",
    "update-env:frontend:dev": "ENVIRONMENT=dev node lib/data-management/update-env.mjs --frontend",
    "update-env:frontend:prod": "ENVIRONMENT=prod node lib/data-management/update-env.mjs --frontend",
    "update-env:link-generator:dev": "ENVIRONMENT=dev node lib/data-management/update-env.mjs --link-generator",
    "update-env:link-generator:prod": "ENVIRONMENT=prod node lib/data-management/update-env.mjs --link-generator",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "packageManager": "pnpm@10.12.1",
  "devDependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.826.0",
    "@aws-sdk/client-s3": "^3.525.0",
    "@aws-sdk/client-ssm": "^3.525.0",
    "@aws-sdk/client-dynamodb": "^3.525.0",
    "@aws-sdk/lib-dynamodb": "^3.525.0",
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "aws-cdk": "^2.1019.0",
    "aws-cdk-lib": "^2.200.1",
    "babel-jest": "^30.0.2",
    "constructs": "^10.4.2",
    "dotenv": "^16.5.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0"
  },
  "dependencies": {
    "aws-cdk-lib": "2.199.0",
    "constructs": "^10.0.0"
  }
}
