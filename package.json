{
  "name": "ai-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "deploy": "pnpm run deploy:main",
    "deploy:full": "node scripts/deploy.js && pnpm run seed:infra",
    "deploy:infra": "pnpm --filter=infrastructure run deploy",
    "deploy:frontend": "node scripts/update-env.js --frontend && pnpm --filter=frontend run deploy",
    "postdeploy": "node scripts/update-env.js",
    "dev:frontend": "pnpm --filter=frontend run dev",
    "build:frontend": "pnpm --filter=frontend run build",
    "dev": "pnpm --filter=frontend run dev",
    "test": "pnpm --filter='..' run test",
    "test:frontend": "pnpm  --filter=frontend run test",
    "test:infra": "pnpm --filter=infrastructure run test",
    "seed:infra": "pnpm --filter=infrastructure run seed",
    "seed:infra:force": "pnpm --filter=infrastructure run seed:force",
    "seed:job-matching": "pnpm --filter=infrastructure run seed:job-matching",
    "install:frontend": "pnpm --filter=frontend install",
    "install:infra": "pnpm --filter=infrastructure install",
    "lint": "pnpm --filter='..' run lint",
    "lint:frontend": "pnpm --filter=frontend run lint",
    "lint:infra": "pnpm --filter=infrastructure run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "fix:eof": "prettier --write \"**/*\" --end-of-line auto",
    "prepare": "husky"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac",
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.830.0",
    "@aws-sdk/lib-dynamodb": "^3.830.0",
    "@eslint/css": "^0.8.1",
    "@eslint/js": "^9.28.0",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.5.0",
    "@next/eslint-plugin-next": "^15.3.3",
    "@types/aws-sdk": "^2.7.4",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-config-next": "^15.3.3",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.1",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write --end-of-line auto"
    ],
    "infrastructure/**/*.{js,ts}": [
      "pnpm lint:infra",
      "prettier --write --end-of-line auto"
    ],
    "*.{json,md,yml}": [
      "prettier --write --end-of-line auto"
    ]
  }
}
